<script>
// Scroll reveal
(() => {
 const els=document.querySelectorAll(".reveal");
 const io=new IntersectionObserver((entries)=>{
  entries.forEach(e=>{if(e.isIntersecting){e.target.classList.add("in");io.unobserve(e.target)}});
 },{rootMargin:"-12% 0px"});
 els.forEach(el=>io.observe(el));
})();
// Logo fallback
(() => {
 const img=document.getElementById("alLogo");
 if(!img)return;
 img.addEventListener("error",()=>{
  const box=document.createElement("div");
  Object.assign(box.style,{
   width:"44px",height:"44px",borderRadius:"12px",display:"grid",placeItems:"center",
   fontWeight:"900",color:"#0e0f12",
   background:"linear-gradient(135deg,var(--gold),var(--teal))"
  });
  box.textContent="AL";img.replaceWith(box);
 },{once:true});
})();
// Language switch
(() => {
 let lang="en";
 const switcher=document.getElementById("alLang");
 const nodes=document.querySelectorAll("[data-en]");
 const apply=()=>nodes.forEach(n=>n.innerHTML=n.getAttribute(`data-${lang}`));
 apply();
 if(switcher){
  switcher.addEventListener("click",()=>{
   lang=lang==="en"?"de":"en";
   switcher.textContent=lang==="en"?"🇬🇧 EN":"🇩🇪 DE";
   apply();
  });
 }
})();
</script>

